<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvGalleryError_FMDG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/err_msg_no_images"
        android:layout_gravity="center_horizontal"
        android:textSize="22sp"
        android:padding="15dp"
        android:textStyle="italic"
        android:textColor="@color/colorTextSecondary"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/llContentGallery_FMDG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <info.hoang8f.widget.FButton
                android:id="@+id/btnProfile_FPDG"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="Images"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white"
                app:cornerRadius="15dp"
                app:buttonColor="@color/colorPrimary"
                app:shadowEnabled="false"/>

            <info.hoang8f.widget.FButton
                android:id="@+id/btnStills_FPDG"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="Posters"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white"
                app:cornerRadius="15dp"
                app:buttonColor="@color/colorPrimary"
                app:shadowEnabled="false"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvGallery_FPDG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

    </LinearLayout>



</FrameLayout>