<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:animateLayoutChanges="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvReviewAuthor_LIR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Author Tomas Smith"
                android:padding="7dp"
                android:textColor="@color/colorTextPrimary"/>

            <ImageView
                android:id="@+id/ivArrow_LIR"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_expand_more_black_18dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDemoContent_LIR"
            android:maxLines="3"
            android:textStyle="italic"
            android:textColor="@color/colorTextSecondary"/>

        <TextView
            android:id="@+id/tvReviewContent_LIR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="This movie is one of the best movies of all time! It has a great story lines and graphics of it's time and even to today's standards it is brilliant. The world is well though out and well demonstrated. Zorg is a great bad guy, played by Gary Oldman and Bruce Willis plays his role very well. All in all a excellent movie."
            android:visibility="gone"
            android:textColor="@color/colorTextSecondary"/>

    </LinearLayout>

</android.support.v7.widget.CardView>