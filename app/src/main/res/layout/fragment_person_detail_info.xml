<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/llContent_FPDI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/ivPerson_FPDI"
                    android:layout_toStartOf="@+id/ivPerson_FPDI"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvPersonName_FPDI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scarlett Johansson"
                        android:textSize="17sp"
                        android:textColor="@color/colorTextPrimary"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tvPersonKnowAs_FPDI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scarlett Johanssen\nScarlett Ingrid Johansson"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextSecondary"
                        android:textStyle="italic"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tvPersonBirthdayTitle_FPDI"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextPrimary"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Birthday:"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/tvPersonBirthday_FPDI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1984-11-22 (47 years)"
                        android:textSize="13sp"
                        android:textColor="@color/colorTextPrimary"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tvPersonBirthplace_FPDI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New York City - New York - USA"
                        android:textSize="13sp"
                        android:textColor="@color/colorTextPrimary"
                        android:textStyle="italic"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tvDeathdayTitle_FPDI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deathday:"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextPrimary"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvDeathday_FPDI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1984-11-22"
                        android:textSize="13sp"
                        android:textColor="@color/colorTextPrimary"
                        android:layout_gravity="center"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/llContent_FPDI"
                    android:layout_toLeftOf="@id/ivPerson_FPDI">

                    <Button
                        android:id="@+id/btnIMDB_FPDI"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="IMDB"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:textColor="@drawable/flat_button_color"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/btnWeb_FPDI"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="WEB"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:textColor="@drawable/flat_button_color"
                        android:visibility="gone"/>

                </LinearLayout>


                <ImageView
                    android:id="@+id/ivPerson_FPDI"
                    android:layout_width="150dp"
                    android:layout_height="225dp"
                    android:layout_marginLeft="7dp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvBiography_FPDI"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Biography:"
                    android:textSize="18sp"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_margin="5dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvBiography_FPDI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/colorTextPrimary"
                    android:padding="10dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>